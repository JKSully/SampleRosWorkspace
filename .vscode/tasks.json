{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "colcon: build",
            "type": "shell",
            "command": [
                "source /opt/ros/humble/setup.bash;",
                "colcon build --symlink-install",
                "--cmake-args -DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "colcon: clean",
            "type": "shell",
            "command": [
                "rm -rf build;",
                "rm -rf install;",
                "rm -rf log;",
                "rm -rf .cache;"
            ]
        },
    ]
}